<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ asset('build/app.css') }}" rel="stylesheet">
    {% block stylesheets %}
        <style>
            /* Apply the font globally */
            body, h1, h2, h3, h4, h5, h6, .navbar-brand, .nav-link, .btn, p, a {
                font-family: 'Times New Roman', sans-serif;
            }
        </style>
    {% endblock %}
</head>
<body class="bg-light text-dark py-6">
    <header>
        {% include 'nav.html.twig' %}
    </header>

        {% include 'carrousel.html.twig' %}

    <div class="container mt-4">
        {% block body %}{% endblock %}
    </div>

    <footer>
        {% include 'footer.html.twig' %} 
    </footer>

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script>
            $(document).ready(function() {
              

                // Revert navbar color once the new page is fully loaded
                $(window).on('load', function() {
                    $('.navbar-custom').removeClass('navbar-rose-powdery');
                });

                // Initialize the carousel
                $('.carousel').carousel({
                    interval: 2000 // Slide every 2 seconds
                });
            });
        </script>
    {% endblock %}
</body>
</html>
