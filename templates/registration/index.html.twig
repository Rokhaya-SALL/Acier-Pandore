{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body p-5">
            <h1 class="h4 mb-4 text-center">Créer votre compte</h1>
            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            {% if app.request.method == 'POST' and not form.vars.valid %}
              <div class="alert alert-danger">
                Veuillez corriger les erreurs ci-dessous.
              </div>
            {% endif %}

            {{ form_errors(registrationForm) }}

            <div class="form-group mb-3">
              {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Jean'}}) }}
              {{ form_errors(registrationForm.firstName) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Dupont'}}) }}
              {{ form_errors(registrationForm.lastName) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'name@company.com'}}) }}
              {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
              {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.confirmPassword, 'Confirmez le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
              {{ form_errors(registrationForm.confirmPassword) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.address, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control', 'placeholder': '123 Rue Exemple'}}) }}
              {{ form_errors(registrationForm.address) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.city, 'Ville', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.city, {'attr': {'class': 'form-control', 'placeholder': 'Paris'}}) }}
              {{ form_errors(registrationForm.city) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.postalCode, 'Code Postal', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.postalCode, {'attr': {'class': 'form-control', 'placeholder': '75001'}}) }}
              {{ form_errors(registrationForm.postalCode) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.country, 'Pays', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.country, {'attr': {'class': 'form-control', 'placeholder': 'France'}}) }}
              {{ form_errors(registrationForm.country) }}
            </div>

            <div class="form-group mb-3">
              {{ form_label(registrationForm.phone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control', 'placeholder': '+33 1 23 45 67 89'}}) }}
              {{ form_errors(registrationForm.phone) }}
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <button type="submit" class="btn btn-primary">S'inscrire</button>
            </div>

            <p class="text-center">
              Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-primary">Connexion</a>
            </p>

            {{ form_end(registrationForm) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
