{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Product</h1>

        <table class="table table-bordered mt-3">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if product.imageFile %}
                            <img src="{{ asset('uploads/images/' ~ product.imageFile) }}" class="img-thumbnail" alt="{{ product.name }}">
                        {% else %}
                            No image
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ product.category.name }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_make_crud_product_index') }}" class="btn btn-secondary mt-3">Back to list</a>

        <a href="{{ path('app_make_crud_product_edit', {'id': product.id}) }}" class="btn btn-warning mt-3">Edit</a>

        {{ include('make_crud_product/_delete_form.html.twig') }}
    </div>
{% endblock %}
