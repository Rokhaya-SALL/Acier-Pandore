{% extends 'base.html.twig' %}

{% block title %}
  Modifier le Profil
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-neumorphisme p-4 bg-white rounded-custom">
                <h1 class="text-center">Modifier mon profil</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="form-group mt-3">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.codePostal, 'Code Postal', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.pays, 'Pays', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-dark w-100 mt-3">Enregistrer les modifications</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
