{% extends 'base.html.twig' %}

{% block title %}
  Changer le Mot de Passe
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-neumorphisme p-4 bg-white rounded-custom">
                <h1 class="text-center">Changer mon mot de passe</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.oldPassword, 'Ancien mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mt-3">
                        {{ form_label(form.newPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-dark w-100 mt-3">Enregistrer le nouveau mot de passe</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
